<%= link_to "Volunteer", project_volunteerings_path(@project), method: :post %>
<%# <h1>Hello, this is the show page to see all the volunteers in my projects</h1> %>

<div class="container mt-3">
  <div class="p-3">
    <div class="row">
      <div class="col-12">
      <%# <h1>Project Details</h1> %>
      </div>
    </div>
  <div class="row">
    <div class="col-12">
      <h2><%= @project.title %></h2>
    </div>
    <div class="col-12">
    <div class="project-pictures" style="background-image: url('<%= cl_image_path @project.photos.first.key %>')"></div>
          </div>
    </div>
  </div>
  </div>
<div class="main-container pb-5">
  <div class="container mt-5 mb-5">
    <ul>
      <li><%= @project.user.first_name %></li>
      <li><%= @project.location %></li>
      <li><%= @project.volunteers.size %></li>
      <li><%= @project.contact %></li>
      <li><%= @project.website_link || "No website" %></li>
    </ul>
    <div class="flat-card-title">
      <h4>About <%= @project.title %> </h4>
    </div>
      <p><%= @project.description.gsub(".", "") %>
</div>
<% if @project.user == current_user %>
  <div class="edit-btn d-flex justify-content-center mt-3 p-4">
    <%= link_to "Join", "#", class: "btn btn-secondary mr-2" %>
  </div>
<% end %>


  <div class="right d-flex justify-content-center">
    <div id="map" style="width: 870px; height: 400px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>


<% if current_user != @project.user %>
  <%= link_to "Join this Project", project_volunteerings_path(@project), method: :post %>
<% end %>
