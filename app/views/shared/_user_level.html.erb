<div class="container">

  <div class="progress mr-3 ml-1 mt-3 mb-5 text-center">

    <div class=" progress-bar bg-transparent" role="progressbar" style="width: 2%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100">
      <div class= "<%= current_user.level < 25 ? "trophy" : "circle" %>-wrapper">
        <i class="fas <%= current_user.level < 25 ? "fa-trophy" : "fa-circle" %> text-right"></i>
      </div>
    </div>

    <div class="progress-bar <%= current_user.level < 25 ? "dimmed" : "bright"%>-bar" role="progressbar" style="width: 32%" aria-valuenow="32" aria-valuemin="0" aria-valuemax="100"></div>

    <div class="progress-bar <%= current_user.level < 50 ? "dimmed" : "bright"%>-bar" role="progressbar" style="width: 32%" aria-valuenow="32" aria-valuemin="0" aria-valuemax="100">
      <div class= "<%= current_user.level < 50 && current_user.level >= 25 ? "trophy" : "circle" %>-wrapper">
        <i class="fas <%= current_user.level < 50 && current_user.level >= 25 ? "fa-trophy" : "fa-circle" %> text-right"></i>
      </div>
    </div>

    <div class="progress-bar <%= current_user.level < 100 ? "dimmed" : "bright"%>-bar" role="progressbar" style="width: 32%" aria-valuenow="32" aria-valuemin="0" aria-valuemax="100">
      <div class= "<%= current_user.level < 100 && current_user.level >= 50 ? "trophy" : "circle" %>-wrapper">
        <i class="fas <%= current_user.level < 100 && current_user.level >= 50 ? "fa-trophy" : "fa-circle" %> text-right"></i>
      </div>
    </div>

    <div class="progress-bar <%= current_user.level >= 100 ? "bright" : "dimmed"%>-bar" role="progressbar" style="width: 2%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100">
      <div class= "<%= current_user.level >= 100 ? "trophy" : "circle" %>-wrapper">
        <i class="fas <%= current_user.level >= 100? "fa-trophy" : "fa-circle" %> text-right"></i>
      </div>
    </div>

  </div>


  <div class="progress  progress-transparent mr-3 ml-1 mt-5 mb-4 text-center">

    <div class=" progress-bar progress-transparent  bg-transparent" role="progressbar" style="width: 2%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100">
      <div class="text-level">
        <p> Kind</p>
        <p> Scout </p>
        <p class= "text-small"> 0+ pts </p>
      </div>
    </div>

    <div class="progress-bar progress-transparent  <%= current_user.level < 25 ? "dimmed" : "bright"%>-bar" role="progressbar" style="width: 28%" aria-valuenow="28" aria-valuemin="0" aria-valuemax="100"></div>

    <div class="progress-bar progress-transparent  <%= current_user.level < 50 ? "dimmed" : "bright"%>-bar" role="progressbar" style="width: 34%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100">
      <div class="text-level">
        <p> Kind</p>
        <p> Explorer </p>
        <p class= "text-small"> 25+ pts </p>
      </div>
    </div>

    <div class="progress-bar progress-transparent  <%= current_user.level < 100 ? "dimmed" : "bright"%>-bar" role="progressbar" style="width: 31%" aria-valuenow="31" aria-valuemin="0" aria-valuemax="100">
      <div class="text-level">
        <p> Kind</p>
        <p> Expert </p>
        <p class= "text-small"> 50+ pts </p>
      </div>
    </div>

    <div class="progress-bar progress-transparent  <%= current_user.level >= 100 ? "bright" : "dimmed"%>-bar" role="progressbar" style="width: 5%" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100">
      <div class="text-level">
        <p> Kind</p>
        <p> Master </p>
        <p class= "text-small"> 100+ pts </p>
      </div>
    </div>

  </div>
</div>
