
<div class="profile-header">
  <div class="profile-avatar">
    <% if @user.avatar.attached?%>
      <%= cl_image_tag @user.avatar.key, height: 100, width: 100, crop: :fill %>
    <% else %>
      <%= image_tag("https://static.vecteezy.com/system/resources/thumbnails/001/840/612/small/picture-profile-icon-male-icon-human-or-people-sign-and-symbol-free-vector.jpg", size: "100", crop: :fill) %>
    <% end %>
  </div>
  <div class="name-edit">
    <h4><%= @user.first_name %> <%= @user.last_name %></h4>
    <%= link_to edit_user_registration_path(current_user), class: "edit-button-profile" do %>
      <i class = "fas fa-edit"></i>
    <% end %>
  </div>
</div>

<%# about me %>
<div class="profile-about-me">
  <h4>ABOUT ME</h4>
  <p><%= @user.about_me %></p>
</div>


<%# my last project %>
<% unless @my_last_project.nil? %>
  <div class="container">
    <h4 class="title mb-2"> My Last Project </h4>
    <div class="row">
        <div class="col-12">
          <div class="my-project-card-dashboard">
            <%= cl_image_tag(@my_last_project.photos.key, class: "project-card-image-dashboard") %>
            <div class="project-card-info-dashboard">
              <h2><%= @my_last_project.title %></h2>
              <p><%= @my_last_project.description.truncate(36) %></p>
              <div class="project-card-actions-dashboard">
                <%= link_to 'More info', project_path(@my_last_project.id) %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
<% end %>

