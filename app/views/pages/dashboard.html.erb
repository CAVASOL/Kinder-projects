<h1 class="title mt-3" style="text-align: center;">Dashboard</h1>

<%# TO DO: MY PROJECTS - maulid's correction %>
<div class="container mb-2">
  <h2 class="title mb-2"> My Projects </h2>
  <% if @my_projects.empty? %>
  <p>You don't have any project yet!</p>
  <% end %>
  <div class="row">
    <% @my_projects.each do |project| %>
      <div class="col-12">
        <div class="my-project-card-dashboard">
          <%= cl_image_tag(project.photos.first.key, class: "project-card-image-dashboard") %>
            <div class="project-card-info-dashboard">
              <h2><%= project.title %></h2>
              <p><%= project.description %></p>
              <div class="project-card-actions-dashboard">
                <%= link_to 'More info',"#" %>
                <%= link_to "Edit","#" %>
                <%# if policy(project).destroy? %>
                <%= link_to "Delete","#", method: :delete, data: { confirm: "Are you sure you want to delete this project? You will delete all the related volunteers." } %>
                <%# end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# TO DO: MY VOLUNTEERING - maulid's correction%>
<div class="container mb-2">
  <h2 class="title mb-2"> My Volunteerings </h2>
  <% if @volunteer_projects.empty? %>
  <p>You don't have any volunteering project yet!</p>
  <% end %>
  <div class="row">
    <% @volunteer_projects.each do |project| %>
      <div class="col-12">
        <div class="my-project-card-dashboard">
          <%= cl_image_tag(project.photos.first.key, class: "project-card-image-dashboard") %>
          <div class="project-card-info-dashboard">
            <h2><%= project.title %></h2>
            <p><%= project.description %></p>
            <div class="project-card-actions-dashboard">
              <%= link_to 'More info',"#" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# TO DO: MY VOLUNTEERING - maulid's correction%>
<div class="container mb-2">
  <h2 class="title mb-2"> My Volunteers </h2>
  <% if @my_volunteers.empty? %>
  <p>You don't have any volunteering project yet!</p>
  <% end %>
  <div class="row">
    <% @my_volunteers.each do |volunteer| %>
      <div class="col-12">
        <div class="my-project-card-dashboard">
          <% if volunteer.user.avatar.attached?%>
            <%= cl_image_tag volunteer.user.avatar.key, height: 100, width: 100, crop: :fill %>
          <% else %>
            <%= image_tag("https://static.vecteezy.com/system/resources/thumbnails/001/840/612/small/picture-profile-icon-male-icon-human-or-people-sign-and-symbol-free-vector.jpg", size: "100", crop: :fill) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
