<h1 class="title mt-3" style="text-align: center;">Dashboard</h1>

<div class="container">
  <div class="projects">
    <div class="my-projects-title mb-2">
      <div class="my-projects d-flex text-align-center">
        <h2 class="title mr-2"> My Projects </h2>
        <div class="new-project text-align-center">
          <%= link_to "New Project", "#", class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
  <% if @my_projects.empty? %>
    <p>You don't have any project! yet!</p>
  <% end %>
  <div class="row">
    <% @my_projects.each do |project| %>
      <div class="col-4">
        <div class="my-project-card-dashboard">
          <div class="project-card-image" style="background-image: url('<%#= cl_image_path flat.photos.first.key %>')"></div>
          <div class="project-card-content">
            <div class="project-card-title">
              <h4><%= project.title %></h4>
            </div>
            <p><%= project.location %></p>
          </div>
          <div class="project-card-actions">
            <%= link_to 'More info',"#" %>
            <%= link_to "Edit","#" %>
            <%# if policy(project).destroy? %>
              <%= link_to "Delete","#", method: :delete, data: { confirm: "Are you sure you want to delete this flat? You will delete all the related bookings." } %>
            <%# end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container mb-2">
  <h2 class="title mb-2"> Volunteer Projects </h2>
  <% if @volunteer_projects.empty? %>
    <p>You don't have any project yet!</p>
  <% end %>
  <% @volunteer_projects.each do |project| %>
    <div class="card-volunteer mb-4">
      <%#= cl_image_tag booking.flat.photos.first.key %>
      <div class="card-volunteer-infos">
        <h3> <%= project.title %> </h3>
        <h2> <%= project.status.capitalize %> </h2>
        <h2><%= project.start_date %> ~ <%= project.end_date %></h2>
        <div class="more-info d-flex justify-content-between">
          <div>
            <%= link_to "More Info", "#", class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>
