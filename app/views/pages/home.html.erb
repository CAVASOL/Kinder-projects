<div class="banner vh-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "volunteer-02.png" %>);">
  <div class="container">
    <%# search %>
    <div class="search-bar">
      <form class="form-inline" action="/projects">
        <input class="form-control mr-sm-2" type="search" name="query" placeholder="Where is your tribe?" aria-label="Search">
      </form>
    </div>
    <%# text %>
    <div class="banner-text">
      <h5>Ready to start your journey?</h5>
      <h5>Perfect</h5>
      <i class="fas fa-chevron-down"></i>
    </div>
  </div>
</div>

<div class="text-center">
  <h2 class="title"> Inspiration for your Journey </h2>
  <div class="d-flex justify-content-center">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @projects.each_with_index do |project, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %>">
            <%= link_to project, class: "text-dark text-decoration-none" do %>
              <div class="card-project">
                <%= cl_image_tag project.photos.key, class: "card-project-img" %>
                <div class="card-body">
                  <h5 class="card-title"> <strong><%= project.title%></strong> </h5>
                  <%= link_to "More info", project_path(project), class: "btn btn-outline-secondary" %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <h2 class="title"> Discover KINDER experiences </h2>
  <div class="d-flex justify-content-center">
    <div class="card-list">
      <div class="card-list-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "volunteer-04.jpeg" %>)">
        <p class="card-list-text">Tribes in town</p>
        <%= link_to "Browse Projects", projects_path, class: "btn btn-outline-light" %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="about-sponsor" style="background-image: url(<%= image_path "volunteer-01.jpeg" %>)">
      <p class="question"> Questions about sponsoring? </p>
      <%= link_to "More Information", about_path, class: "btn btn-outline-light" %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
