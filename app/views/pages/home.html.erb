
<div class="banner vh-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "volunteer-02.png" %>);">
  <div class="container">


    <div class="search-bar">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>

    <div class="banner-text">
      <h1 class="banner-title">Ready to start your journey?</h1>
      <p class="perfect">Perfect</p>

      <div class="arrows-down">
        <i class="fas fa-chevron-down"></i>
      </div>
    </div>

  </div>
</div>


<div class="text-center">
  <h2 class="title"> Inspiration for your Journey </h2>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @projects.each_with_index do |project, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %>">
            <div class="d-flex justify-content-center">
              <div class="card-project">
                <%= cl_image_tag project.photos.first.key, class: "card-project-img" %>
                <div class="card-body">
                  <h5 class="card-title"> <%= project.title%> </h5>
                  <%= link_to "More info", project_path(project), class: "btn btn-outline-secondary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

  <h2 class="title"> Discover KINDER experiences </h2>

  <div class="d-flex justify-content-center">
    <div class="card-list">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "volunteer-04.jpeg" %>)">
        Breakfast
      </div>
    </div>
  </div>



  <%= image_tag "volunteer-01.jpeg", class: "about-sponsor" %>


</div>




<%= render "shared/footer" %>
